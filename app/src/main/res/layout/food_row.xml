<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:padding="8dp"
    android:layout_margin="5dp"
    android:background="#f5f5f5"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/idFoodImg"
        android:layout_marginLeft="8dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/idTitle"
        android:layout_toRightOf="@id/idFoodImg"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="5dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="$200"
        android:layout_marginRight="8dp"
        android:id="@+id/idPrice"
        android:layout_alignParentRight="true"
        android:layout_below="@id/idTitle"
        android:gravity="center"/>

    <ImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/idAddItem"
        android:layout_below="@id/idTitle"
        android:layout_toLeftOf="@id/idPrice"
        android:layout_marginRight="20dp"
        android:src="@drawable/additem"/>

    <TextView
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:id="@+id/idQuant"
        android:layout_below="@id/idTitle"
        android:layout_toLeftOf="@id/idAddItem"
        android:layout_marginRight="-18dp"
        android:gravity="center"
        android:inputType="number"/>

    <ImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/idSubItem"
        android:layout_below="@id/idTitle"
        android:layout_toLeftOf="@id/idQuant"
        android:layout_marginRight="-18dp"
        android:src="@drawable/subitem"/>

</RelativeLayout>